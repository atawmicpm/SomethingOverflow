<div class="answer-box">
  <div class="answer" <% if answer.best? %>id="best-answer"<% end %>>    
    <%= render 'answers/details', answer: answer %>
    <%= render 'votes/vote_box', voteable: answer %>
    <%= render 'answers/choose_best', answer: answer %>
    <div class="num-comments"><%= answer.comments.length %> comments</div>
    <%= link_to "Add/View Comments", question_path(answer.question), :class => "comment-toggle" %>
    <div class="float-clear"></div>
    <%= render 'comments/comment_box', answer: answer  %>
  </div>
  
</div>
