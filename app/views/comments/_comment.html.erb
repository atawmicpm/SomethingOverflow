<div class="comment">
  <div class="comment-details">
    <div class="comment-text"><%= comment.content %></div>
    <p class="comment-timestamp">commented <%= time_ago_in_words(comment.created_at) %> ago</p>
    <%= link_to comment.user.name, user_path(comment.user), :class => "comment-user" %>
  </div>
  <%= render 'votes/vote_box', voteable: comment %>
</div>
